<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_title"
        android:layout_below="@+id/item_title"
        android:text="2014-2-12"
        android:textColor="@color/skyblue"
         />
    
    <TextView
        android:id="@+id/item_catalogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_time"
        android:layout_alignBottom="@+id/item_time"
        android:layout_marginLeft="5dp"
        android:text="个人专题/数据挖掘"
        android:textColor="@color/skyblue"       
        />
    
    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_time"
        android:layout_alignLeft="@id/item_time"
        android:text="heheh"
        />
    
    <TextView
        android:id="@+id/item_UUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxHeight="180px"
        android:maxWidth="180px"
        android:padding="5dp"
        android:src="@drawable/bayun" />
    
</RelativeLayout>
